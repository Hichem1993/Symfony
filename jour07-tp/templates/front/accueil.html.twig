{% extends "front.html.twig" %}

{% block contenu_page %}
    <h1>Accueil</h1>
    <div class="row p-2">
        {% for article in articles %}
            <div class="card col-3 p-2 my-2">
                <img src="{{ asset(article.urlImg) }}" class="card-img-top" alt="{{article.titre}}">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{article.titre}}</h5>
                        <p class="badge text-bg-secondary">Auteur : {{article.auteur}}</p>
                    </div>
                    <p class="card-text">{{article.description}}</p>
                    <div class="d-flex justify-content-between">
                        <p class="badge text-bg-secondary">{{article.dtCreation | format_datetime('short', 'none', locale: 'fr')}}</p>
                        <p class="badge text-bg-secondary">Dur√©e : {{article.duree}}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}