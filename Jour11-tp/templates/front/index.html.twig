{% extends 'base.html.twig' %}

{% block title %}Recette de cuisine{% endblock %}

{% block body %}

    <h1>Bienvenue</h1>
    <section class="row">
        {% for recette in recettes %}
            <div class="col-12 col-lg-6 col-xl-3 my-3">
                <article class="card h-100">
                    <div class="card-body">
                        <h2 class="cart-title"> {{recette.titre}} </h2>
                        <p class="card-text"> {{recette.description | more(10)}} </p>
                    </div>
                    <footer class="card-footer d-flex justify-content-between align-items-center">
                        <a href=" {{ path("app_recette_show" , {id:recette.id}) }} " class="btn btn-dark btn-sm">Voir +</a>
                        <span><b>Prix : </b> {{recette.prix | info_prix() }} </span>
                    </footer>
                </article>
            </div>
        {% endfor %}
    </section>

{% endblock %}
