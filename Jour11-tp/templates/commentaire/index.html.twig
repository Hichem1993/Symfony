{% extends 'back.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body_back %}
    <h1>Commentaire index</h1>

    <a href="{{ path('app_commentaire_new') }}" class="btn btn-primary my-3 p-1">Cr√©er un nouveau commentaire</a>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>Dt_creation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.email }}</td>
                <td>{{ commentaire.sujet | more(2) }}</td>
                <td>{{ commentaire.message | more(5) }}</td>
                <td>{{ commentaire.dtCreation ? commentaire.dtCreation|date('Y-m-d') : '' }}</td>
                <td width="100">
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-warning btn-sm mx-2"><i class="bi bi-pencil-square"></i></a>
                    {{ include('commentaire/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
