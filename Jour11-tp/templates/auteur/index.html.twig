{% extends 'back.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body_back %}
    <h1>Auteur index</h1>

    <a href="{{ path('app_auteur_new') }}" class="btn btn-primary my-3 p-1">Cr√©er un nouveau auteur</a>

    <table class="table align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.email }}</td>
                <td>
                    {% for role in auteur.roles %}
                        {{role}}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="btn btn-warning btn-sm mx-2"><i class="bi bi-pencil-square"></i></a>

                    {{ include('auteur/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
